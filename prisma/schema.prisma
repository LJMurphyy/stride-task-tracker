generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  role      Role     @default(DEV)
  tasks     Task[]
  createdAt DateTime @default(now())
}

model Task {
  id          String     @id @default(cuid())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  dueDate     DateTime?
  user        User?      @relation(fields: [userId], references: [id])
  userId      String?
  createdAt   DateTime   @default(now())
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  createdAt   DateTime @default(now())
}

enum Role {
  TECH_LEAD
  DEV
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}
